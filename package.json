{
  "name": "@angular-package/spectre.css",
  "version": "1.0.0-alpha.3.0.1",
  "homepage": "https://angular-package.github.io/spectre.css",
  "author": "@angular-package <contact@angular-package.dev>",
  "description": "Modified Spectre.css - a lightweight, responsive, and modern CSS framework originally designed by Yan Zhu",
  "main": "dist/spectre.min.scss",
  "scripts": {
    "sass:dev": "sass --no-source-map --style=expanded src:dist && exit",
    "sass:docs": "npm run sass:docs:dev & npm run sass:docs:prod && exit",
    "sass:docs:dev": "sass --no-source-map --style=expanded docs/src/scss/docs.scss:docs/dist/docs.css && exit",
    "sass:docs:prod": "sass --no-source-map --style=compressed docs/src/scss/docs.scss:docs/dist/docs.min.css && exit",
    "sass:prod": "npm run sass:prod:spectre & npm run sass:prod:spectre:exp & npm run sass:prod:spectre:icons && exit",
    "sass:prod:spectre": "sass --no-source-map --style=compressed src/spectre.scss:dist/spectre.min.css && exit",
    "sass:prod:spectre:exp": "sass --no-source-map --style=compressed src/spectre-exp.scss:dist/spectre-exp.min.css && exit",
    "sass:prod:spectre:icons": "sass --no-source-map --style=compressed src/spectre-icons.scss:dist/spectre-icons.min.css && exit",
    "build:docs": "npm run sass:docs & pug docs/src --pretty --out ./docs",
    "build": "npm run sass:prod & npm run sass:dev & ng build spectre.css & npm run build:docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-package/spectre.css"
  },
  "license": "MIT",
  "keywords": [
    "@angular-package",
    "css variables",
    "css",
    "flexbox",
    "framework",
    "front-end",
    "mobile-friendly",
    "modern",
    "responsive",
    "sass",
    "spectre",
    "spectre.css"
  ],
  "bugs": {
    "url": "https://github.com/angular-package/spectre.css/issues"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-csscomb": "^3.1.0",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^3.0.0",
    "tslib": "^2.3.0",
    "tslint": "^6.1.3"
  }
}
