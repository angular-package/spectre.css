      .column
        h5 Accent
        span.label.label-accent.mr-1 accent label

        pre.code(data-lang='HTML')
          code
            :highlight(lang="html")
              <!-- Accent color -->
              <span class="label label-accent">accent label</span>

    .docs-demo.columns
      .column
        h5 Primary
        p You can add another class #[code label-primary], #[code label-primary-dark], #[code label-primary-light] for labels colored with primary colors.
        span.label.label-primary.mr-1 primary label
        span.label.label-primary-dark.mr-1 primary label dark
        span.label.label-primary-light.mr-1 primary label light
        pre.code(data-lang='HTML')
          code
            :highlight(lang="html")
              <!-- Primary color labels -->
              <span class="label label-primary">primary label</span>
              <span class="label label-primary-dark">primary label dark</span>
              <span class="label label-primary-light">primary label light</span>

    .docs-demo.columns
