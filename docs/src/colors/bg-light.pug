extends ../_layout/_docs-layout.pug
include ../_layout/_docs-color.mixin.pug

block variables
  - var color = 'bg'
  - var shade = 'light'
  - var slug = color + '-' + shade
  - var parent = 'colors'
  - var title = 'Bg color light - Colors - Spectre.css CSS Framework'
  - var description = 'Spectre.css CSS Framework is a lightweight, responsive and modern CSS framework for faster and extensible development. Spectre provides basic styles for typography and elements, flexbox based responsive layout system, pure CSS components and utilities with best practice coding and consistent design language.'

block docs-content
  +docs-heading(slug, 'Bg light', { parent, name: 'Colors' })
    //- +docs-menu('Theme', {parent, slug})

    p
      small.label.label-secondary CSS Variables
      small.label.label-secondary.ml-1 Bg color light
      small.label.label-secondary.ml-1 Customizable
      small.label.label-secondary.ml-1 hsla

    include ../_layout/_ad-g.pug

    +docs-color(
      {
        title: 'Bg color ' + shade,
        name: color + '-color-' + shade,
        code: slug,
        hex: '#FEFEFF',
        sass: '$' + color +'-color-' + shade,
        theme: {
          property: color + '-color-' + shade,
          value: '$' + color +'-color-' + shade
        }
      }
    )

    +docs-pagination({ path: 'bg-dark', name: 'Bg dark' }, { path: 'body-bg', name: 'Body bg' })

    include ../_layout/_ad-c.pug

